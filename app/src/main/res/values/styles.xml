<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:textColor">#111</item>
        <item name="android:background">@drawable/rounded_boder</item>
        <item name="android:paddingLeft">@dimen/dimen8</item>
        <item name="android:paddingRight">@dimen/dimen8</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/dimen8</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ShapeAppearanceOverlay.Avatar" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="spinnerItemStyle2" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>