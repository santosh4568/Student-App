<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/selectrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Date Range"
        android:layout_margin="@dimen/_1sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_19sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="From Date"
        android:focusableInTouchMode="false"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="@+id/selectrange"
        app:layout_constraintStart_toStartOf="@+id/selectrange"
        app:layout_constraintTop_toBottomOf="@+id/selectrange" />

    <EditText
        android:id="@+id/to"
        android:layout_width="0dp"
        android:hint="To Date"
        android:focusableInTouchMode="false"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/from"
        app:layout_constraintStart_toStartOf="@+id/from"
        app:layout_constraintTop_toBottomOf="@+id/from" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:backgroundTint="#00000000"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="@+id/to"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="@+id/to"
        app:layout_constraintTop_toBottomOf="@id/to" />

</androidx.constraintlayout.widget.ConstraintLayout>
